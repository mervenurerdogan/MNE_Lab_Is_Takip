<!DOCTYPE html>
<html lang="en">
<head>
    <title>Mvc5 Kütüphane Kayıt Ol</title>
    <!-- custom-theme -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Course Register Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />

    <!-- //custom-theme -->
    <!-- css files -->
    <link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&amp;subset=devanagari,latin-ext" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
    <link href="~/webregister/css/style.css" type="text/css" rel="stylesheet" media="all">
    <!-- //css files -->

    <link rel="stylesheet" href="~/webregister/css/font-awesome.css"> <!-- Font-Awesome-Icons-CSS -->

</head>
<!-- body starts -->
<body>
    <!-- section -->
    <section class="register">
        <div class="register-full">
            <div class="register-left">
                <div class="register">


                    <div class="content3">
                        <ul>
                            <li><a class="" href="/Login/GirisYap/"> Giriş Yap</a></li>
                            <li><a class="read" href="#"> Hasta Giriş</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            
               
       
            
            <div class="register-right" style="background-color:skyblue">

                <div class="register-in">
                    <h2 style="color:blue;font-size:large"><span class="fa fa-pencil"></span> MNELAB Personel Kayıt Paneli</h2>
                    <div class="register-form">
                        <form class="form-group" method="post">

                            <div class="fields-grid">
                                <div class="styled-input agile-styled-input-top">
                                    @Html.TextBoxFor(x => x.PersonelAd)
                                    @Html.ValidationMessageFor(x => x.PersonelAd, "", new { @class = "text-danger" })
                                    <label style="color:white">Adınız</label>
                                    <span></span>
                                </div>
                                <div class="styled-input agile-styled-input-top">
                                    @Html.TextBoxFor(x => x.PersonelSoyad)
                                    @Html.ValidationMessageFor(x => x.PersonelSoyad, "", new { @class = "text-danger" })
                                    <label style="color:white">Soyadınız</label>
                                    <span></span>
                                </div>
                                <div class="styled-input">
                                    @Html.TextBoxFor(x => x.Mail)
                                    @Html.ValidationMessageFor(x => x.Mail, "", new { @class = "text-danger" })
                                    <label style="color:white">Email</label>
                                    <span></span>
                                </div>

                                <div class="styled-input">
                                    <input type="password" name="Sifre1" required="">
                                    @Html.ValidationMessageFor(x => x.Sifre1, "", new { @class = "text-danger" })
                                    <label style="color:white">Şifre</label>
                                    <span></span>
                                </div>

                                <div class="styled-input">
                                    <input type="password" name="Sifre2" required="">
                                    @Html.ValidationMessageFor(x => x.Sifre2, "", new { @class = "text-danger", @style = "color:red" })
                                    <label style="color:white">Şifre Tekrar</label>
                                    <span></span>
                                </div>
                                <div style="color:brown;background-color:darkturquoise;background-size:auto">
                                    @ViewBag.BasariliKayit
                                </div>

                                <input type="submit" value="Kayıt Ol">
</form>
                    </div>
                </div>
                <div class="clear"> </div>
            </div>

            <!-- copyright -->
            <p class="agile-copyright">© 2020 Tüm hakları saklıdır | Design by <a href="https://w3layouts.com/" target="_blank">W3layouts</a></p>
            <!-- //copyright -->
</section>
    <!-- //section -->
</body>
<!-- //body ends -->
</html>