@model MneLabMVC.Models.Entitys.RaporlarTBL
@{
    ViewBag.Title = "RaporEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<!DOCTYPE html>
<html>


<title>RaporEkle</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


<body>
    <br />
    <br />
    <br />

    <form class="w3-container w3-card-4 w3-light-grey w3-text-blue w3-margin" method="post">
        <h2 class="w3-center">Rapor Kayıt</h2>

        <div class="w3-row w3-section">

            <div class="w3-rest">
               @Html.DropDownListFor(x=>x.RaporTurTBL.RaporTurID,(List<SelectListItem>)ViewBag.turdgr,"Rapor Türünü Seçin...", new { @class = "form-control" })
            </div>
        </div>

        <div class="w3-row w3-section">

            <div class="w3-rest">
                <input class="w3-input w3-border" name="RaporNo" type="text" placeholder="Rapor No">
            </div>
        </div>

        <div class="w3-row w3-section">

            <div class="w3-rest">
                <input class="w3-input w3-border" name="RaporDuzenTarih" type="text" value="@DateTime.Now.ToShortDateString()" placeholder="Rapor Düzenlenme Tarihi">
            </div>
        </div>

        <div class="w3-row w3-section">

            <div class="w3-rest">

                @Html.DropDownListFor(x => x.LaboratuvarlarTBL.LabID, (List<SelectListItem>)ViewBag.labdgr, "Laboratuvar Seçiniz", new { @class = "form-control" })
            </div>
        </div>


        <div class="w3-row w3-section">

            <div class="w3-rest">
                @Html.DropDownListFor(x => x.PersonellerTBL.PersonelID, (List<SelectListItem>)ViewBag.persdgr, "Rapor Veren  Personel", new { @class = "form-control" })

            </div>
        </div>


        <div class="w3-row w3-section">

            <div class="w3-rest">
                @Html.DropDownListFor(x => x.NumunelerTBL.NumuneID, (List<SelectListItem>)ViewBag.numdgr, "Rapor Sahibi ", new { @class = "form-control" })
            </div>
        </div>

      



        <button class="w3-button w3-block w3-section w3-blue w3-ripple w3-padding">Rapor Ekle</button>

    </form>

</body>
</html>




