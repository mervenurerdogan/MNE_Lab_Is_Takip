@model MneLabMVC.Models.Entitys.DeneylerTBL
@{
    ViewBag.Title = "DeneyEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>MNE LAB</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


</head>




<body>
    <br />
    <br />
    <br />

    <form class="w3-container w3-card-4 w3-light-grey w3-text-blue w3-margin" method="post">
        <h2 class="w3-center">Deney Ekle</h2>

        <div class="w3-row-padding">
            <div class="w3-half">
                <label>Deney Adı</label>
                <input class="w3-input w3-border" name="DeneyAdi" type="text" placeholder="Deney Adı">
            </div>
            <div class="w3-half">
                <label>Deney Tür</label>
                @Html.DropDownListFor(x => x.DeneyTurTBL.DeneyTurID, (List<SelectListItem>)ViewBag.dnyturdgr,"Deney Türünü Seçin...", new { @class = "form-control" })
            </div>
        </div>
        <div class="w3-row-padding">
            <div  class="w3-half">
                <label>Deneyi Yapan Personel</label>
                @Html.DropDownListFor(x => x.PersonellerTBL.PersonelID, (List<SelectListItem>)ViewBag.dgrper,"Personel Seçin...", new { @class = "form-control" })
            </div>

            <div class="w3-half">

                <label>Kullanılan Malzeme</label>
                @Html.DropDownListFor(x => x.MalzemelerTBL.MalzemeID, (List<SelectListItem>)ViewBag.dgrmal,"Malzeme Seçin...", new { @class = "form-control" })
            </div>
            
        </div>

        <div class="w3-row-padding">
            <div class="w3-half">
                <label>Hasta Bilgileri </label>
                @Html.DropDownListFor(x => x.NumunelerTBL.NumuneID, (List<SelectListItem>)ViewBag.numdgr,"Hastayı Seçin... ",new { @class = "form-control" })
            </div>
            <div class="w3-half">
                <label>Numune Türü</label>
                @Html.DropDownListFor(x => x.NumuneTurTBL.NumuneTurID, (List<SelectListItem>)ViewBag.numturdgr,"Numune Türünü Seçin", new { @class = "form-control" })
            </div>
        </div>

        <div class="w3-row-padding">
            <div class="w3-half">
                <label>Deney Raporu </label>
                @Html.DropDownListFor(x => x.RaporTurTBL.RaporTurID, (List<SelectListItem>)ViewBag.rapordgr,"Rapor Türünü Seçin...", new { @class = "form-control" })
            </div>
            <div class="w3-half">
                <label>Deneye Kesilen Fatura Adı</label>
                @Html.DropDownListFor(x => x.FaturaTurTBL.FaturaTurID, (List<SelectListItem>)ViewBag.fatdgr,"Fatura Türünü Seçin...", new { @class = "form-control" })
            </div>
        </div>

        <div class="w3-row-padding">
            <div class="w3-half">
                <label>Deney Ücret/TL </label>
                <input class="w3-input w3-border" name="DeneyUcret" type="number"   placeholder="Deney Ücreti">
            </div>
            <div class="w3-half">
                <label>Deney Yapılış  Tarihi</label>
                         <input class="w3-input w3-border" type="date" value="@DateTime.Now.ToShortDateString()" name="DeneyTarih" placeholder="Deney Başlangıç Tarihini Giriniz..."/>      
            
            </div>
        </div>

        <div style=" margin-bottom:15px;margin-top:15px;position:relative">


        </div>
        <br />

       

        <button class="w3-button w3-block w3-section w3-blue w3-ripple w3-padding">Deney Ekle</button>

    </form>

</body>
</html>



