
@using MneLabMVC.Models.Entitys
@model List<RaporlarTBL>
@{
    ViewBag.Title = "HastaRaporlar";
    Layout = "~/Views/Shared/Hasta_Layout.cshtml";
    //Layout = null;
}
<html>

<head>
    <title>RaporGörüntüle</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

</head>
<body>
    <div> </div><br />

    <table class="table table-responsive-sm">
        <tr class="w3-light-grey w3-hover-red">
            <th>ID</th>
            <th>Rapor Türü</th>
            <th>Rapor No</th>
            <th>Rapor Düzenlenme Tarihi</th>
            <th>Laboratuvar</th>
            <th>Rapor Çıkaran Personel</th>
            <th>Rapor Sahibi </th>


        </tr>
        @foreach (var rap in Model)
        {

            <tr class="w3-hover-blue">
                <td>@rap.RaporID</td>
                <td>@rap.RaporTurTBL.RaporTur</td>
                <td>@rap.RaporNo</td>
                <td>@Convert.ToDateTime(rap.RaporDuzenTarih).ToShortDateString()</td>
                <td>@rap.LaboratuvarlarTBL.LabKodu</td>
                <td>@rap.PersonellerTBL.PersonelAd &nbsp @rap.PersonellerTBL.PersonelSoyad</td>
                <td>@rap.NumunelerTBL.NumuneAd &nbsp @rap.NumunelerTBL.NumuneSoyad</td>

            </tr>

        }

    </table>
 
</body>

</html>