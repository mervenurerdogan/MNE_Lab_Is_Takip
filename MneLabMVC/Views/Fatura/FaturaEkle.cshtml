@model MneLabMVC.Models.Entitys.FaturalarTBL
@{
    ViewBag.Title = "FaturaEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!DOCTYPE html>
<html>


<title>FaturaEkle</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


<body>
    <br />
    <br />
    <br />

    <form class="w3-container w3-card-4 w3-light-grey w3-text-blue w3-margin" method="post">
        <h2 class="w3-center">Fatura Kayıt</h2>

        <div class="w3-row w3-section">

            <div class="w3-rest">
               @Html.DropDownListFor(x=>x.FaturaTurTBL.FaturaTurID,(List<SelectListItem>)ViewBag.turdgr,"Fatura Türünü Seçin", new { @class = "form-control" })
            </div>
        </div>

        <div class="w3-row w3-section">

            <div class="w3-rest">
                <input class="w3-input w3-border" name="FaturaNo" type="text" placeholder="Fatura No">
            </div>
        </div>

        <div class="w3-row w3-section">

            <div class="w3-rest">
                <input class="w3-input w3-border" name="FaturaTarih" type="date" value="@DateTime.Now.ToShortDateString()" placeholder="Fatura Kesim Tarihi">
            </div>
        </div>

        <div class="w3-row w3-section">

            <div class="w3-rest">

                @Html.DropDownListFor(x => x.LaboratuvarlarTBL.LabID, (List<SelectListItem>)ViewBag.labdgr, "Laboratuvar Seçiniz", new { @class = "form-control" })
            </div>
        </div>


        <div class="w3-row w3-section">

            <div class="w3-rest">
                @Html.DropDownListFor(x => x.PersonellerTBL.PersonelID, (List<SelectListItem>)ViewBag.persdgr, "Fatura Kesen Personel", new { @class = "form-control" })

            </div>
        </div>


        <div class="w3-row w3-section">

            <div class="w3-rest">
                @Html.DropDownListFor(x => x.NumunelerTBL.NumuneID, (List<SelectListItem>)ViewBag.numdgr, "Fatura Sahibi", new { @class = "form-control" })
            </div>
        </div>

        <div class="w3-row w3-section">

            <div class="w3-rest">
                <input class="w3-input w3-border" name="FaturaTutar" type="text" placeholder="Fatura Tutar/TL ">
            </div>
        </div>




        <button class="w3-button w3-block w3-section w3-blue w3-ripple w3-padding">Fatura Ekle</button>

    </form>

</body>
</html>


